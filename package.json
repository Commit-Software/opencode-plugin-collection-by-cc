{
  "name": "opencode-plugins-cc",
  "version": "1.0.0",
  "description": "A collection of OpenCode plugins and slash commands",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun build index.ts --outdir dist --target node && tsc --emitDeclarationOnly --declaration --declarationDir dist",
    "prepublishOnly": "bun run build"
  },
  "peerDependencies": {
    "@opencode-ai/plugin": ">=0.15.0"
  },
  "devDependencies": {
    "@opencode-ai/plugin": "^0.15.0",
    "@types/bun": "^1.3.1",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "opencode",
    "plugin",
    "code-simplifier",
    "refactoring",
    "code-quality",
    "slash-commands"
  ],
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/kenhuang/opencode-plugin-collection-by-cc"
  }
}
